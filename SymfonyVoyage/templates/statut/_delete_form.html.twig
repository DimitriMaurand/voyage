{%if is_granted ('ROLE_ADMIN')%}
<form method="post" action="{{ path('app_statut_delete', {'id': statut.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ statut.id) }}">
    <button class="btn w-34 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 ml-2 rounded-md m-2">Supprimer</button>
</form>
{% endif %}