{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <h2 class="text-xl font-bold text-center m-4">Tableau d'image'</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_image</th>
                <th>Url_image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.nomImage }}</td>
                <td>{{ image.urlImage }}</td>
                <td>
                    <a href="{{ path('app_image_show', {'id': image.id}) }}"><button class="btn w-20 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-2 m-2 rounded-md">show</button></a>
                    <a href="{{ path('app_image_edit', {'id': image.id}) }}"><button class="btn w-20 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-2 m-2 rounded-md">editer</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_image_new') }}"><button  class="  w-auto bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md"> Cr√©er un voyage</button></a>
     <a href="{{ path('app_home') }}"><button  class="  w-auto bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md"> Retour</button></a>
  
{% endblock %}
