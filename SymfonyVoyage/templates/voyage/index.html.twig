                <td>{{ voyage.titreVoyage }}</td>
                <td>{{ voyage.DescriptionVoyage }}</td>
                <td>{{ voyage.dureeVoyage }}</td>
                {# <td>{{ voyage.debutVoyage ? voyage.debutVoyage|date('Y-m-d') : '' }}</td>
