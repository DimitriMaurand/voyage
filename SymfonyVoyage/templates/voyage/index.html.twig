{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <h2 class="text-xl font-bold text-center m-4">Tableau de Voyage</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre_voyage</th>
                <th>Description_voyage</th>
                <th>Duree_voyage</th>
                {# <th>Debut_voyage</th>
                <th>Fin_voyage</th> #}
